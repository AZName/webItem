/* pages/weather/weather.wxss */
page {
    background-color: skyblue;
    color: white;
    font-family: 微软雅黑;

}
.advertising {
  width: 100%;
  height: 100rpx;
  text-align: center;
  line-height: 100rpx;
  font-size: 25rpx;
}
/*头*/
.headerView{
    width: 100%;
    height: 600rpx;
}
/*//温度*/
.temperature {
  font-size: 170rpx;
  text-align: center;
  line-height: 170rpx;
}
/*//天气*/
.weather {
  text-align: center;
  line-height: 40rpx;
  font-size: 30rpx;
}
.weather text {
  display: inline-block;
  text-indent: 1em;
}
/*详情*/
.detail {
  display: flex;
  flex-direction: row;
  text-align: center;
  line-height: 50rpx;
  margin: 20rpx;
  font-size: 28rpx;
  margin-top: 80rpx;
}
.detail text {
  border: 2rpx solid white;
  height: 50rpx;
  display: inline-block;
  flex: 1;
}
.comprehensive {
  line-height: 50rpx;
  margin: 20rpx;
  font-size: 32rpx;
  margin-top: 80rpx;
}
.comprehensive text {
  display: inline-block;
  width: 50%;
  text-indent: 2em;
}
.tableView {
  margin-top: 80rpx;
  width: 100%;
  white-space: nowrap;
}
.cell {
  border: 2rpx solid white;
  display: inline-block;
  width: 47%;
  height: 300rpx;
  font-size: 36rpx;
  text-align: center;
  line-height: 50rpx;
  margin: 10rpx;
  border-radius: 20rpx;

}
.cell view {
  margin: 10rpx;

}